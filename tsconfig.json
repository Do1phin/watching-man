{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "/dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@h/*": [
        "helpers/*"
      ],
//      "@components/*": ["src/components/*"],
//      "@helpers/*": ["./src/helpers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
