{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "/dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@pages/*": ["./src/pages/*"],
      "@public/*": ["./public/*"],
      "@images/*": ["./public/images/*"],
      "@styles/*": ["./public/styles/*"],
      "@locales/*": ["./public/locales/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "dist/**/*"]
}
